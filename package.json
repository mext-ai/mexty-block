{
  "name": "@mexty/block",
  "version": "1.3.1",
  "description": "React components for MEXT federation modules",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/authors/*/index.esm.js",
      "require": "./dist/authors/*/index.js",
      "types": "./dist/authors/*/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c --bundleConfigAsCjs --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/mext-block.git"
  },
  "keywords": [
    "react",
    "federation",
    "mext",
    "micro-frontends",
    "webpack-federation"
  ],
  "author": "MEXT Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
